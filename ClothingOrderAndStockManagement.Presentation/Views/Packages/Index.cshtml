@model ClothingOrderAndStockManagement.Application.Helpers.PaginatedList<PackageDto>
@using ClothingOrderAndStockManagement.Application.Dtos.Packages
@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="entity-header">
    <h2>Packages</h2>
</div>

<div class="entity-search-add">
    <form asp-controller="Packages" asp-action="Index" method="get" class="entity-search-form" autocomplete="off">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search packages..." value="@Context.Request.Query["searchString"]" />
            <button type="submit" class="btn btn-primary d-flex align-items-center">
                <img src="~/images/icons/Search.png" alt="Search" style="width: 18px; height: 18px;" />
            </button>
        </div>
    </form>

    <button class="btn btn-outline-primary entity-add-btn"
            data-bs-toggle="modal" data-bs-target="#addPackageModal">
        <img src="~/images/icons/Add.png" alt="Add" style="width: 18px; height: 18px;" />
        Add Package
    </button>

    @await Html.PartialAsync("Partials/_AddPackageModal", ViewData["AddPackageModel"] as CreatePackageDto ?? new CreatePackageDto())
</div>

<div class="entity-card">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover entity-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Package Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Available Qty</th>
                        <th>Stock Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var package in Model)
                {
                    var badgeClass = package.QuantityAvailable == 0 ? "none" : package.QuantityAvailable <= 5 ? "low" : "ok";
                    <tr>
                        <td>@package.PackagesId</td>
                        <td>@package.PackageName</td>
                        <td>@(package.Description ?? "—")</td>
                        <td>₱@package.Price.ToString("N2")</td>
                        <td><span class="badge-qty @badgeClass">@package.QuantityAvailable</span></td>
                        <td>
                            @if (package.QuantityAvailable > 0)
                            {
                                <span class="badge bg-success">In Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </td>
                        <td class="entity-actions">
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-outline-info"
                                        data-bs-toggle="modal" data-bs-target="#packageDetailsModal-@package.PackagesId">
                                    Details
                                </button>

                                <button class="btn btn-sm btn-outline-success"
                                        data-bs-toggle="modal" data-bs-target="#editPackageModal-@package.PackagesId">
                                    Edit
                                </button>

                                <button class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal-@package.PackagesId">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="entity-pagination">
            <div>Page @Model.PageIndex of @Model.TotalPages</div>
            <div>
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-secondary btn-sm">Previous</a>
                }
                @if (Model.HasNextPage)
                {
                    <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm">Next</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="entity-empty">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <circle cx="9" cy="9" r="2" />
                <path d="M21 15l-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
            </svg>
            <h5>No packages found</h5>
            <p>Start by creating your first package using the "Add Package" button above.</p>
        </div>
    }
</div>

@if (Model != null)
{
    @foreach (var package in Model)
    {
        <!-- Package Details Modal -->
        @await Html.PartialAsync("Partials/_PackageDetailsModal", package)

        <!-- Edit Package Modal -->
        @await Html.PartialAsync("Partials/_EditPackageModal", new UpdatePackageDto
        {
            PackagesId = package.PackagesId,
            PackageName = package.PackageName,
            Description = package.Description,
            Price = package.Price,
            QuantityAvailable = package.QuantityAvailable,
            PackageItems = (package.PackageItems ?? new List<PackageItemDto>())
                .Select(pi => new UpdatePackageItemDto
                {
                    ItemId = pi.ItemId,
                    ItemQuantity = pi.ItemQuantity
                }).ToList()
        })

        <!-- Delete Modal -->
        @await Html.PartialAsync("_DeleteModal", ("Package", "Delete", package.PackagesId, package.PackageName))
    }
}

@section Scripts {
    <script src="~/js/packages.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var showAddModal = '@ViewData["ShowAddPackageModal"]';
            if (showAddModal) {
                var addModal = new bootstrap.Modal(document.getElementById('addPackageModal'));
                addModal.show();
            }

            var showEditModalId = '@ViewData["ShowEditPackageModalId"]';
            if (showEditModalId) {
                var editModalElement = document.getElementById('editPackageModal-' + showEditModalId);
                if (editModalElement) {
                    var editModal = new bootstrap.Modal(editModalElement);
                    editModal.show();
                }
            }
        });
    </script>
}
