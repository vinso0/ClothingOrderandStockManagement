@model ClothingOrderAndStockManagement.Application.Helpers.PaginatedList<PackageDto>
@using ClothingOrderAndStockManagement.Application.Dtos.Items
@using ClothingOrderAndStockManagement.Application.Dtos.Packages
@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="package-header">
    <h2>Packages</h2>
</div>

<div class="package-search-add-section">
    <!-- Search Form -->
    <form asp-controller="Packages" asp-action="Index" method="get" class="package-search-form" autocomplete="off">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search packages..." value="@Context.Request.Query["searchString"]" />
            <button type="submit" class="btn btn-primary d-flex align-items-center">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <!-- Add Package Button -->
    <button class="btn btn-outline-primary package-add-btn"
            data-bs-toggle="modal" data-bs-target="#addPackageModal">
        <i class="fas fa-plus"></i>
        Add Package
    </button>

    <!-- Add Package Modal -->
    @await Html.PartialAsync("Partials/_AddPackageModal", new CreatePackageDto())
</div>

<div class="reports-section">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover package-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Package Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Available Quantity</th>
                        <th>Stock Status</th>
                        <th class="package-actions">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var package in Model)
                    {
                        <tr>
                            <td><span class="package-id">@package.PackagesId</span></td>
                            <td><span class="package-name">@package.PackageName</span></td>
                            <td class="package-details">@(package.Description ?? "No description")</td>
                            <td class="package-details">₱@package.Price.ToString("N2")</td>
                            <td class="package-quantity">
                                <span class="quantity-badge @(package.QuantityAvailable <= 5 ? "low-stock" : "normal-stock")">
                                    @package.QuantityAvailable
                                </span>
                            </td>
                            <td class="stock-status">
                                @if (package.QuantityAvailable > 0)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> In Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle"></i> Out of Stock
                                    </span>
                                }
                            </td>
                            <td class="package-actions">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-info package-details-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#packageDetailsModal-@package.PackagesId">
                                        <i class="fas fa-eye"></i> Details
                                    </button>
                                    @await Html.PartialAsync("Partials/_PackageDetailsModal", package)

                                    <button class="btn btn-sm btn-outline-success package-edit-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editPackageModal-@package.PackagesId">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    @{
                                        var updateModel = new UpdatePackageDto
                                        {
                                            PackagesId = package.PackagesId,
                                            PackageName = package.PackageName,
                                            Description = package.Description,
                                            Price = package.Price,
                                            QuantityAvailable = package.QuantityAvailable,
                                            PackageItems = (package.PackageItems ?? new List<PackageItemDto>())
                                        .Select(pi => new UpdatePackageItemDto
                                        {
                                            ItemId = pi.ItemId,
                                            ItemQuantity = pi.ItemQuantity
                                        }).ToList()
                                        };
                                    }
                                    @await Html.PartialAsync("Partials/_EditPackageModal", updateModel)

                                    <button class="btn btn-sm btn-outline-danger package-delete-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal-@package.PackagesId">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                    @await Html.PartialAsync("_DeleteModal",
                                    ("Package", "Delete", package.PackagesId, package.PackageName))
                        </div>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-packages-section">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <circle cx="9" cy="9" r="2" />
                <path d="M21 15l-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
            </svg>
            <h5>No packages found</h5>
            <p>Start by creating your first package using the "Add Package" button above.</p>
        </div>
    }

    <!-- Pagination -->
    <div class="pagination-section">
        <div>
            Page @Model!.PageIndex of @Model!.TotalPages
        </div>

        <div>
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index"
                   asp-route-pageIndex="@(Model.PageIndex - 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-secondary">Previous</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="Index"
                   asp-route-pageIndex="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-primary">Next</a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/packages.js"></script>
}

@if (ViewData["ShowAddPackageModal"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var addPackageModal = new bootstrap.Modal(document.getElementById('addPackageModal'));
            addPackageModal.show();
        });
    </script>
}

<style>
    .package-details-btn, .package-edit-btn, .package-delete-btn {
        border-radius: 4px;
        font-size: 12px;
        padding: 4px 12px;
        margin-right: 0.25rem;
        display: flex;
        align-items: center;
    }

        .package-details-btn:hover {
            background-color: #17a2b8;
            color: white;
        }

        .package-edit-btn:hover {
            background-color: #28a745;
            color: white;
        }

        .package-delete-btn:hover {
            background-color: #dc3545;
            color: white;
        }

    .package-header h2 {
        color: #333;
        margin-bottom: 1.5rem;
    }

    .package-search-add-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .package-search-form {
        flex: 1;
        max-width: 400px;
    }

    /* New Styles for Available Quantity */
    .package-quantity {
        text-align: center;
        font-weight: 600;
    }

    .quantity-badge {
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
        font-weight: 600;
        color: white;
    }

        .quantity-badge.normal-stock {
            background-color: #28a745;
        }

        .quantity-badge.low-stock {
            background-color: #ffc107;
            color: #212529;
        }

    .stock-status {
        text-align: center;
    }

        .stock-status .badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

    .package-table th {
        background-color: #f8f9fa;
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .package-table tr:hover {
        background-color: #f8f9fa;
    }
</style>
