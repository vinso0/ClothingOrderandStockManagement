@using ClothingOrderAndStockManagement.Application.Dtos.Items
@using ClothingOrderAndStockManagement.Application.Dtos.Packages
@model UpdatePackageDto

<div class="modal fade package-modal edit-package-modal" id="editPackageModal-@Model.PackagesId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>Edit Package - @Model.PackageName
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-controller="Packages" method="post" autocomplete="off" id="editPackageForm-@Model.PackagesId">
                    <input type="hidden" name="PackagesId" value="@Model.PackagesId" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-tag me-1"></i>Package Name *
                                </label>
                                <input type="text" name="PackageName" value="@Model.PackageName" 
                                       class="form-control" required maxlength="100" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-dollar-sign me-1"></i>Price *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input type="number" name="Price" value="@Model.Price" 
                                           class="form-control" step="0.01" min="0" required />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-boxes me-1"></i>Available Quantity *
                                </label>
                                <input type="number" name="QuantityAvailable" value="@Model.QuantityAvailable" 
                                       class="form-control" min="0" required />
                                <small class="form-text text-muted">
                                    Current stock of complete packages
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-1"></i>Description
                                </label>
                                <textarea name="Description" class="form-control" rows="3" 
                                          maxlength="500">@Model.Description</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <label class="form-label fw-semibold mb-0">
                                <i class="fas fa-list me-1"></i>Package Items *
                            </label>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Items included in this package
                            </small>
                        </div>
                        
                        <div class="card">
                            <div class="card-body">
                                <div id="editPackageItems-@Model.PackagesId">
                                    @if (Model.PackageItems?.Any() == true)
                                    {
                                        @for (int i = 0; i < Model.PackageItems.Count; i++)
                                        {
                                            <div class="package-item-row row mb-3 p-2 border rounded">
                                                <div class="col-md-6">
                                                    <label class="form-label small">Item</label>
                                                    @{
                                                        var items = (IEnumerable<ItemDto>)ViewBag.Items ?? Enumerable.Empty<ItemDto>();
                                                    }
                                                    <select name="PackageItems[@i].ItemId" class="form-select" required>
                                                        <option value="">Select Item</option>
                                                        @foreach (var item in items)
                                                        {
                                                            var isSelected = item.ItemId == Model.PackageItems[i].ItemId;
                                                            if (isSelected)
                                                            {
                                                                <option value="@item.ItemId" selected>
                                                                    @item.ItemCategoryType - @item.Size (@item.Color) - Qty: @item.Quantity
                                                                </option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.ItemId">
                                                                    @item.ItemCategoryType - @item.Size (@item.Color) - Qty: @item.Quantity
                                                                </option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label small">Quantity per Package</label>
                                                    <input type="number" name="PackageItems[@i].ItemQuantity"
                                                           value="@Model.PackageItems[i].ItemQuantity" 
                                                           min="1" class="form-control item-quantity" required />
                                                    <small class="form-text text-muted available-stock"></small>
                                                </div>
                                                <div class="col-md-2 d-flex align-items-end">
                                                    <button type="button" class="btn btn-outline-danger btn-sm remove-item w-100">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="package-item-row row mb-3 p-2 border rounded">
                                            <div class="col-md-6">
                                                <label class="form-label small">Item</label>
                                                <select name="PackageItems[0].ItemId" class="form-select" required>
                                                    <option value="">Select Item</option>
                                                    @if (ViewBag.Items != null)
                                                    {
                                                        @foreach (var item in (IEnumerable<ItemDto>)ViewBag.Items)
                                                        {
                                                            <option value="@item.ItemId" data-stock="@item.Quantity">
                                                                @item.ItemCategoryType - @item.Size (@item.Color) - Stock: @item.Quantity
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label class="form-label small">Quantity per Package</label>
                                                <input type="number" name="PackageItems[0].ItemQuantity" 
                                                       class="form-control item-quantity" min="1" required />
                                                <small class="form-text text-muted available-stock"></small>
                                            </div>
                                            <div class="col-md-2 d-flex align-items-end">
                                                <button type="button" class="btn btn-outline-danger btn-sm remove-item w-100">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm add-package-item" 
                                        data-package-id="@Model.PackagesId">
                                    <i class="fas fa-plus me-1"></i>Add Another Item
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
