@using ClothingOrderAndStockManagement.Application.Dtos.Packages
@model PackageDto

<div class="modal fade package-details-modal" id="packageDetailsModal-@Model.PackagesId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>Package Details - @Model.PackageName
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card border-0">
                            <div class="card-body p-0">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-tag me-1"></i>Package Information
                                </h6>
                                
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Package ID:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-secondary">#@Model.PackagesId</span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Name:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.PackageName
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Description:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @(Model.Description ?? "No description provided")
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Price:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="fw-bold text-success fs-5">₱@Model.Price.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-boxes me-1"></i>Stock Status
                                </h6>
                                
                                <div class="mb-3">
                                    <div class="display-4 fw-bold @(Model.QuantityAvailable <= 5 ? "text-warning" : "text-success")">
                                        @Model.QuantityAvailable
                                    </div>
                                    <small class="text-muted">Available Packages</small>
                                </div>

                                @if (Model.QuantityAvailable > 0)
                                {
                                    <span class="badge bg-success p-2">
                                        <i class="fas fa-check-circle me-1"></i>In Stock
                                    </span>
                                    @if (Model.QuantityAvailable <= 5)
                                    {
                                        <div class="mt-2">
                                            <small class="text-warning">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Low Stock Warning
                                            </small>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-danger p-2">
                                        <i class="fas fa-times-circle me-1"></i>Out of Stock
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="mt-4">
                    <h6 class="text-muted mb-3">
                        <i class="fas fa-list me-1"></i>Package Contents
                    </h6>
                    
                    @if (Model.PackageItems?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Size</th>
                                        <th>Color</th>
                                        <th class="text-center">Quantity per Package</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PackageItems)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@(item.ItemName ?? "Unknown Item")</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Size))
                                                {
                                                    <span class="badge bg-secondary">@item.Size</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <span class="badge bg-info">@item.Color</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="fw-bold">@item.ItemQuantity</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Total Items in Package:</strong> @Model.PackageItems.Sum(x => x.ItemQuantity)
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p>No items configured for this package</p>
                        </div>
                    }
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Close
                </button>
                <button class="btn btn-outline-success" 
                        data-bs-toggle="modal" 
                        data-bs-target="#editPackageModal-@Model.PackagesId"
                        data-bs-dismiss="modal">
                    <i class="fas fa-edit me-1"></i>Edit Package
                </button>
            </div>
        </div>
    </div>
</div>
