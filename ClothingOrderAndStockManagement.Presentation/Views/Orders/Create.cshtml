@model ClothingOrderAndStockManagement.Application.Dtos.Orders.CreateOrderDto
@using ClothingOrderAndStockManagement.Application.Dtos.Packages
@using ClothingOrderAndStockManagement.Application.Dtos.Customers
@{
    ViewData["Title"] = "Create Order";
    var customer = ViewBag.Customer as CustomerDto;
    var packages = ViewBag.Packages as List<PackageDto> ?? new List<PackageDto>();
}

<div class="order-container">
    <div class="order-header">
        <h2>Create Order for @customer?.CustomerName</h2>
    </div>

    <div class="order-card">
        <div style="padding: 2rem;">
            <div class="customer-info-card">
                <h6>Customer Details</h6>
                <div class="info-row">
                    <div class="info-item">
                        <span class="info-label">Name</span>
                        <span class="info-value">@customer?.CustomerName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Contact</span>
                        <span class="info-value">@customer?.ContactNumber</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Address</span>
                        <span class="info-value">@customer?.Address</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Zip Code</span>
                        <span class="info-value">@customer?.ZipCode</span>
                    </div>
                </div>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data" id="createOrderForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CustomerId" value="@customer?.CustomerId" />
                <input type="hidden" asp-for="UserId" value="@User.Identity?.Name" />

                <!-- Package Selection -->
                <div class="section-card">
                    <h6 class="section-header">Package Selection</h6>

                    <div id="packageContainer">
                        <div class="package-item">
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <label class="form-label">Package</label>
                                    <select class="form-select package-select" name="OrderPackages[0].PackagesId" required onchange="updatePrice(this, 0)">
                                        <option value="">Select Package</option>
                                        @foreach (var package in packages)
                                        {
                                            <option value="@package.PackagesId" data-price="@package.Price">
                                                @package.PackageName - ₱@package.Price.ToString("N2")
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Quantity</label>
                                    <input type="number" class="form-control quantity-input"
                                           name="OrderPackages[0].Quantity" min="1" value="1" required
                                           onchange="updatePrice(this, 0)" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Subtotal</label>
                                    <input type="text" class="form-control subtotal-display" id="subtotal-0" readonly value="₱0.00" />
                                    <input type="hidden" name="OrderPackages[0].PriceAtPurchase" id="price-0" value="0" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-add-package" onclick="addPackageRow()">
                        Add Another Package
                    </button>

                    <div class="total-amount">
                        <span>Total Amount:</span>
                        <span id="totalAmount">₱0.00</span>
                    </div>
                </div>

                <!-- Initial Payment -->
                <div class="section-card">
                    <h6 class="section-header">Initial Payment (Optional)</h6>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Amount Paid</label>
                            <input type="number" class="form-control"
                                   name="InitialPayment.Amount"
                                   id="paymentAmount"
                                   step="0.01" min="0" placeholder="0.00"
                                   onchange="calculateRemainingBalance()" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Payment Status</label>
                            <select class="form-select" name="InitialPayment.PaymentStatus">
                                <option value="">Select Payment Status</option>
                                <option value="Down Payment">Down Payment</option>
                                <option value="Full Payment">Full Payment</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Remaining Balance</label>
                            <input type="text" class="form-control" id="remainingBalance" readonly value="₱0.00" />
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Payment Proof 1</label>
                            <input type="file" name="ProofImage" class="form-control" accept="image/*" onchange="displayFileName(this, 1)" />
                            <small class="form-text text-muted">PNG, JPG up to 10MB</small>
                            <small class="text-muted" id="fileName1"></small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Payment Proof 2 (Optional)</label>
                            <input type="file" name="ProofImage2" class="form-control" accept="image/*" onchange="displayFileName(this, 2)" />
                            <small class="form-text text-muted">PNG, JPG up to 10MB</small>
                            <small class="text-muted" id="fileName2"></small>
                        </div>
                    </div>
                </div>

                <!-- Order Status (allowed list) -->
                <div class="section-card">
                    <h6 class="section-header">Order Status</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="OrderStatus" class="form-label">Select Status</label>
                            <select asp-for="OrderStatus" class="form-select">
                                <option value="Awaiting Payment">Awaiting Payment</option>
                                <option value="Partially Paid">Partially Paid</option>
                                <option value="Fully Paid">Fully Paid</option>
                                <option value="Completed">Completed</option>
                                <option value="Returned">Returned</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="action-buttons">
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create Order</button>
                </div>
            </form>
        </div>
    </div>
</div>