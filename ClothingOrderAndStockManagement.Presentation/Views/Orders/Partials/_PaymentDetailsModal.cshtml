@model ClothingOrderAndStockManagement.Application.Dtos.Orders.OrderRecordDto

<div class="modal fade" id="paymentModal-@Model.OrderRecordsId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Payment Details - Order #@Model.OrderRecordsId</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Order Summary -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">Order Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Customer:</strong> @Model.CustomerName</p>
                                <p><strong>Order Date:</strong> @Model.OrderDatetime.ToString("MMM dd, yyyy")</p>
                            </div>
                            <div class="col-6 text-end">
                                <p><strong>Total Amount:</strong> <span class="text-primary">₱@Model.TotalAmount.ToString("N2")</span></p>
                                <p><strong>Total Paid:</strong> <span class="text-success">₱@Model.TotalPaid.ToString("N2")</span></p>
                                <p>
                                    <strong>Remaining Balance:</strong>
                                    <span class="@(Model.RemainingBalance > 0 ? "text-danger" : "text-success")">
                                        ₱@Model.RemainingBalance.ToString("N2")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Records -->
                <h6 class="mb-3">Payment History</h6>
                @if (Model.PaymentRecords != null && Model.PaymentRecords.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Payment #</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Proof</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.PaymentRecords)
                                {
                                    <tr>
                                        <td>#@payment.PaymentRecordsId</td>
                                        <td>@payment.PaymentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                        <td><strong>₱@payment.Amount.ToString("N2")</strong></td>
                                        <td>
                                            <span class="badge @(payment.PaymentStatus == "Full Payment" ? "bg-success" : "bg-info")">
                                                @payment.PaymentStatus
                                            </span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(payment.ProofUrl))
                                            {
                                                <a href="@payment.ProofUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    View Proof 1
                                                </a>
                                            }
                                            @if (!string.IsNullOrEmpty(payment.ProofUrl2))
                                            {
                                                <a href="@payment.ProofUrl2" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    View Proof 2
                                                </a>
                                            }
                                            @if (string.IsNullOrEmpty(payment.ProofUrl) && string.IsNullOrEmpty(payment.ProofUrl2))
                                            {
                                                <span class="text-muted">No proof uploaded</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No payments received yet.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>