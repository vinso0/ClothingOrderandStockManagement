@model ClothingOrderAndStockManagement.Application.Dtos.Orders.OrderRecordDto

<div class="modal fade" id="managePaymentModal-@Model.OrderRecordsId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2" />
                        <line x1="1" y1="10" x2="23" y2="10" />
                    </svg>
                    Manage Payments - Order #@Model.OrderRecordsId
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" style="padding: 2rem;">
                <!-- Order Summary -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">Order Summary - @Model.CustomerName</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Total Amount:</strong><br>
                                <span class="fs-5 text-primary">₱@Model.TotalAmount.ToString("N2")</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Amount Paid:</strong><br>
                                <span class="fs-5 text-success">₱@Model.TotalPaid.ToString("N2")</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Remaining Balance:</strong><br>
                                <span class="fs-5 @(Model.RemainingBalance > 0 ? "text-danger" : "text-success")">
                                    ₱@Model.RemainingBalance.ToString("N2")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment History -->
                @if (Model.PaymentRecords != null && Model.PaymentRecords.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Payment History (@Model.PaymentRecords.Count)</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Type</th>
                                            <th>Proof</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in Model.PaymentRecords.OrderBy(p => p.PaymentDate))
                                        {
                                            <tr>
                                                <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                                <td class="text-success fw-bold">₱@payment.Amount.ToString("N2")</td>
                                                <td>
                                                    <span class="badge @(payment.PaymentStatus == "Full Payment" ? "bg-success" : "bg-warning")">
                                                        @payment.PaymentStatus
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(payment.ProofUrl))
                                                    {
                                                        <a href="@payment.ProofUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                            View Proof
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No proof</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Payment Form -->
                @if (Model.RemainingBalance > 0)
                {
                    var hasDownPayment = Model.PaymentRecords?.Any(p => p.PaymentStatus == "Down Payment") == true;
                    var isFirstPayment = Model.PaymentRecords?.Any() != true;

                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                @if (isFirstPayment)
                                {
                                    <text>Add Payment</text>
                                }
                                else if (hasDownPayment)
                                {
                                    <text>Complete Payment (Final Payment)</text>
                                }
                                else
                                {
                                    <text>Add Additional Payment</text>
                                }
                            </h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="AddPayment" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="OrderRecordsId" value="@Model.OrderRecordsId" />

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Payment Amount <span class="text-danger">*</span></label>
                                        <input type="number"
                                               name="Amount"
                                               class="form-control"
                                               step="0.01"
                                               min="0.01"
                                               max="@Model.RemainingBalance"
                                               placeholder="Enter amount"
                                               required />
                                        <small class="text-muted">Maximum: ₱@Model.RemainingBalance.ToString("N2")</small>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Payment Type <span class="text-danger">*</span></label>
                                        <select name="PaymentStatus" class="form-select" required>
                                            <option value="">Select payment type</option>
                                            @if (isFirstPayment || !hasDownPayment)
                                            {
                                                <option value="Down Payment">Down Payment</option>
                                            }
                                            <option value="Full Payment">Full Payment</option>
                                        </select>
                                        @if (hasDownPayment)
                                        {
                                            <small class="text-info">Select "Full Payment" to complete this order</small>
                                        }
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold">Payment Proof</label>
                                        <input type="file"
                                               name="ProofImage"
                                               class="form-control"
                                               accept="image/*" />
                                        <small class="text-muted">Upload payment receipt or proof (PNG, JPG up to 10MB)</small>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        @if (hasDownPayment)
                                        {
                                            <text>Complete Payment</text>
                                        }
                                        else
                                        {
                                            <text>Add Payment</text>
                                        }
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">
                        <h5 class="alert-heading">✅ Order Fully Paid</h5>
                        <p class="mb-0">This order has been completely paid. No additional payments needed.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
