@* ClothingOrderAndStockManagement.Presentation/Views/Orders/Partials/_AddPaymentModal.cshtml *@
@model ClothingOrderAndStockManagement.Application.Dtos.Orders.OrderRecordDto

<div class="modal fade" id="addPaymentModal-@Model.OrderRecordsId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Add Payment - Order #@Model.OrderRecordsId</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Order Summary -->
                <div class="alert alert-info">
                    <div class="row">
                        <div class="col-6">
                            <strong>Customer:</strong> @Model.CustomerName<br />
                            <strong>Total Amount:</strong> ₱@Model.TotalAmount.ToString("N2")
                        </div>
                        <div class="col-6 text-end">
                            <strong>Already Paid:</strong> <span class="text-success">₱@Model.TotalPaid.ToString("N2")</span><br />
                            <strong>Remaining Balance:</strong> <span class="text-danger">₱@Model.RemainingBalance.ToString("N2")</span>
                        </div>
                    </div>
                </div>

                <form asp-action="AddPayment" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="OrderRecordsId" value="@Model.OrderRecordsId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Payment Amount <span class="text-danger">*</span></label>
                            <input type="number" name="Amount" class="form-control"
                                   step="0.01" min="0.01" max="@Model.RemainingBalance"
                                   placeholder="Enter amount" required />
                            <small class="text-muted">Maximum: ₱@Model.RemainingBalance.ToString("N2")</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Payment Status <span class="text-danger">*</span></label>
                            <select name="PaymentStatus" class="form-select" required>
                                <option value="">Select Status</option>
                                <option value="Down Payment" selected>Down Payment</option>
                                <option value="Full Payment">Full Payment</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Payment Proof 1 (Optional)</label>
                            <input type="file" name="ProofImage" class="form-control" accept="image/*" />
                            <small class="text-muted">Upload receipt or payment screenshot</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Payment Proof 2 (Optional)</label>
                            <input type="file" name="ProofImage2" class="form-control" accept="image/*" />
                            <small class="text-muted">Additional proof if needed</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>