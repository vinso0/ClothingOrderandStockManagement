@model ClothingOrderAndStockManagement.Application.Dtos.Orders.OrderRecordDto

<style>
    .modal-payment .modal-content {
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }

    .modal-payment .modal-header {
        background: linear-gradient(135deg, #28a745 0%, #20a03a 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }

    .modal-payment .modal-title {
        font-weight: 600;
        font-size: 1.25rem;
    }

    .payment-summary {
        background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
        border: 2px solid #28a745;
        border-radius: 8px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .payment-summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
    }

    .payment-summary-label {
        font-weight: 600;
        color: #333;
    }

    .payment-summary-value {
        font-weight: 700;
        font-size: 1.1rem;
    }

    .value-total {
        color: #5a4a3a;
    }

    .value-paid {
        color: #28a745;
    }

    .value-remaining {
        color: #dc3545;
    }

    .file-upload-area {
        border: 2px dashed #28a745;
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        background: #f8f9fa;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .file-upload-area:hover {
        background: #e8f5e9;
        border-color: #20a03a;
    }

    .file-upload-icon {
        width: 48px;
        height: 48px;
        color: #28a745;
        margin-bottom: 0.5rem;
    }

    .file-selected {
        color: #28a745;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .modal-payment .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20a03a 100%);
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .modal-payment .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
    }
</style>

<div class="modal fade modal-payment" id="addPaymentModal-@Model.OrderRecordsId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 0.5rem;">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                        <line x1="1" y1="10" x2="23" y2="10"/>
                    </svg>
                    Add Payment - Order #@Model.OrderRecordsId
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" style="padding: 2rem;">
                <!-- Order Summary -->
                <div class="payment-summary">
                    <div class="payment-summary-row">
                        <div>
                            <div class="payment-summary-label">Customer</div>
                            <div>@Model.CustomerName</div>
                        </div>
                        <div style="text-align: right;">
                            <div class="payment-summary-label">Order Date</div>
                            <div>@Model.OrderDatetime.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                    <hr style="margin: 1rem 0; border-color: rgba(0,0,0,0.1);">
                    <div class="payment-summary-row">
                        <span class="payment-summary-label">Total Amount:</span>
                        <span class="payment-summary-value value-total">₱@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="payment-summary-row">
                        <span class="payment-summary-label">Already Paid:</span>
                        <span class="payment-summary-value value-paid">₱@Model.TotalPaid.ToString("N2")</span>
                    </div>
                    <div class="payment-summary-row" style="border-top: 2px solid rgba(0,0,0,0.1); padding-top: 1rem; margin-top: 0.5rem;">
                        <span class="payment-summary-label" style="font-size: 1.1rem;">Remaining Balance:</span>
                        <span class="payment-summary-value value-remaining" style="font-size: 1.3rem;">₱@Model.RemainingBalance.ToString("N2")</span>
                    </div>
                </div>

                    <form asp-action="AddPayment" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="OrderRecordsId" value="@Model.OrderRecordsId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" style="font-weight: 600; color: #333;">
                                    Payment Amount <span style="color: #dc3545;">*</span>
                                </label>
                                <input type="number" name="Amount" class="form-control"
                                       style="padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 6px;"
                                       step="0.01" min="0.01" max="@Model.RemainingBalance"
                                       placeholder="Enter amount" required />
                                <small style="color: #666;">Maximum: ₱@Model.RemainingBalance.ToString("N2")</small>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" style="font-weight: 600; color: #333;">
                                    Payment Method <span style="color: #dc3545;">*</span>
                                </label>
                                <select name="PaymentMethod" class="form-select"
                                        style="padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 6px;" required>
                                    <option value="">Select a method</option>
                                    <option value="Cash">Cash</option>
                                    <option value="CreditCard">Credit Card</option>
                                    <option value="BankTransfer">Bank Transfer</option>
                                </select>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-12">
                                <label class="form-label" style="font-weight: 600; color: #333;">
                                    Upload Receipt (Optional)
                                </label>
                                <div class="file-upload-area">
                                    <svg class="file-upload-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 16l4-4m0 0l4 4m-4-4v12M21 12h-6m6 0l-4-4m4 4l-4 4" />
                                    </svg>
                                    <input type="file" name="Receipt" style="display: none;" />
                                    <div class="file-selected">No file selected</div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success">Submit Payment</button>
                        </div>
                    </form>