@using ClothingOrderAndStockManagement.Application.Dtos.Orders
@using ClothingOrderAndStockManagement.Application.Helpers
@model ReturnsIndexDto
@{
    ViewData["Title"] = "Returns Management";
    string GetStatusBadgeClass(string status) =>
        status switch {
            "Awaiting Payment" => "bg-danger",
            "Partially Paid" => "bg-warning",
            "Fully Paid" => "bg-info",
            "Completed" => "bg-success",
            "Returned" => "bg-secondary",
            "Cancelled" => "bg-dark",
            _ => "bg-secondary"
        };
}

<div class="orders-header">
    <h2>Returns Management</h2>
</div>

<!-- Filter Section -->
<div class="orders-filter-section d-flex justify-content-between align-items-center mb-3">
    <form asp-action="Index" method="get" class="d-flex gap-2">
        <input type="text" name="searchString" class="form-control" placeholder="Search customers..."
               value="@ViewData["CurrentFilter"]" style="max-width: 300px;">
        <input type="date" name="fromDate" class="form-control" value="@ViewData["FromDate"]" style="max-width: 160px;">
        <input type="date" name="toDate" class="form-control" value="@ViewData["ToDate"]" style="max-width: 160px;">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
    </form>
</div>

<!-- Completed Orders Section -->
<div class="reports-section mb-4">
    <h4 class="mb-3">Completed Orders</h4>
    @if (Model.Completed != null && Model.Completed.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover customer-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th class="customer-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Completed)
                    {
                        <tr>
                            <td><span class="customer-id">#@order.OrderRecordsId</span></td>
                            <td><span class="customer-name">@order.CustomerName</span></td>
                            <td class="customer-details">
                                @order.OrderDate.ToString("MMM dd, yyyy")
                                <br />
                                <small>@order.OrderDate.ToDateTime(TimeOnly.MinValue).ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                            </td>
                            <td class="customer-actions">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-cancel"
                                            onclick="showReturnModal(@order.OrderRecordsId, @order.OrderPackagesId, '@Html.Raw(Html.Encode(order.CustomerName))')">
                                        Return
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-section">
            <div>
                Page @Model.Completed.PageIndex of @Model.Completed.TotalPages
            </div>
            <div>
                @if (Model.Completed.HasPreviousPage)
                {
                    <a asp-action="Index"
                       asp-route-pageIndex="@(Model.Completed.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-fromDate="@ViewData["FromDate"]"
                       asp-route-toDate="@ViewData["ToDate"]"
                       class="btn btn-outline-secondary">Previous</a>
                }
                @if (Model.Completed.HasNextPage)
                {
                    <a asp-action="Index"
                       asp-route-pageIndex="@(Model.Completed.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-fromDate="@ViewData["FromDate"]"
                       asp-route-toDate="@ViewData["ToDate"]"
                       class="btn btn-outline-primary">Next</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="no-customers-section">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                <line x1="3" y1="6" x2="21" y2="6"/>
                <path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            <h5>No completed orders found</h5>
            <p>Completed orders will appear here for processing returns.</p>
        </div>
    }
</div>

<!-- Return History Section -->
<div class="reports-section">
    <h4 class="mb-3">Return History</h4>
    @if (Model.History != null && Model.History.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover customer-table">
                <thead>
                    <tr>
                        <th>Return ID</th>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var returnLog in Model.History)
                    {
                        <tr>
                            <td><span class="customer-id">#@returnLog.ReturnLogsId</span></td>
                            <td><span class="customer-id">#@returnLog.OrderRecordsId</span></td>
                            <td><span class="customer-name">@returnLog.CustomerName</span></td>
                            <td class="customer-details">
                                @returnLog.ReturnDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(returnLog.OrderStatus)">@returnLog.OrderStatus</span>
                            </td>
                            <td class="customer-details">@returnLog.Reason</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination for History -->
        <div class="pagination-section">
            <div>
                Page @Model.History.PageIndex of @Model.History.TotalPages
            </div>
            <div>
                @if (Model.History.HasPreviousPage)
                {
                    <a asp-action="Index"
                       asp-route-pageIndex="@(Model.History.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-fromDate="@ViewData["FromDate"]"
                       asp-route-toDate="@ViewData["ToDate"]"
                       class="btn btn-outline-secondary">Previous</a>
                }
                @if (Model.History.HasNextPage)
                {
                    <a asp-action="Index"
                       asp-route-pageIndex="@(Model.History.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-fromDate="@ViewData["FromDate"]"
                       asp-route-toDate="@ViewData["ToDate"]"
                       class="btn btn-outline-primary">Next</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="no-customers-section">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 3h18v18H3zM9 9l6 6M15 9l-6 6"/>
            </svg>
            <h5>No return history found</h5>
            <p>Return history will appear here once orders are returned.</p>
        </div>
    }
</div>

<!-- Return Modal -->
<div class="modal fade" id="returnModal" tabindex="-1" aria-labelledby="returnModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="returnModalLabel">Process Return</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="returnForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="orderRecordsId" name="orderRecordsId">
                    <input type="hidden" id="orderPackagesId" name="orderPackagesId">

                    <div class="mb-3">
                        <label class="form-label">Customer:</label>
                        <p id="customerName" class="fw-bold"></p>
                    </div>

                    <div class="mb-3">
                        <label for="reason" class="form-label">Return Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="reason" name="reason" rows="3"
                                  placeholder="Please provide the reason for return..." maxlength="500"></textarea>
                        <div class="form-text">Maximum 500 characters</div>
                        <div class="invalid-feedback" id="reasonError"></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="restockItems" name="restockItems" checked>
                            <label class="form-check-label" for="restockItems">
                                Restock items (add back to inventory)
                            </label>
                        </div>
                        <div class="form-text">Uncheck if items are damaged and cannot be resold</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="processReturn()">
                    <i class="fas fa-undo"></i> Process Return
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showReturnModal(orderRecordsId, orderPackagesId, customerName) {
            document.getElementById('orderRecordsId').value = orderRecordsId;
            document.getElementById('orderPackagesId').value = orderPackagesId;
            document.getElementById('customerName').textContent = customerName;

            const reasonField = document.getElementById('reason');
            reasonField.value = '';
            reasonField.classList.remove('is-invalid');
            document.getElementById('reasonError').textContent = '';
            document.getElementById('restockItems').checked = true;

            var modal = new bootstrap.Modal(document.getElementById('returnModal'));
            modal.show();
        }

        function validateForm() {
            const reasonField = document.getElementById('reason');
            const reasonError = document.getElementById('reasonError');
            let isValid = true;

            reasonField.classList.remove('is-invalid');
            reasonError.textContent = '';

            if (!reasonField.value || reasonField.value.trim() === '') {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason is required.';
                isValid = false;
            } else if (reasonField.value.length > 500) {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason cannot exceed 500 characters.';
                isValid = false;
            }

            return isValid;
        }

        async function processReturn() {
            if (!validateForm()) return;

            const form = document.getElementById('returnForm');
            const formData = new FormData(form);

            const returnData = {
                orderRecordsId: parseInt(formData.get('orderRecordsId')),
                orderPackagesId: parseInt(formData.get('orderPackagesId')),
                reason: formData.get('reason'),
                restockItems: formData.get('restockItems') === 'on'
            };

            try {
                const response = await fetch('@Url.Action("ProcessReturn", "Returns")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(returnData)
                });

                const result = await response.json();
                if (result.success) {
                    alert('Return processed successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('returnModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred while processing the return: ' + error.message);
            }
        }
    </script>
}
