@using ClothingOrderAndStockManagement.Application.Dtos.Orders
@using ClothingOrderAndStockManagement.Application.Helpers
@model PaginatedList<CompletedOrderDto>
@{
    ViewData["Title"] = "Returns Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Returns Management</h3>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="searchString" class="form-label">Search Orders</label>
                                <input type="text" class="form-control" id="searchString" name="searchString"
                                       value="@ViewData["CurrentFilter"]" placeholder="Search by customer ID...">
                            </div>
                            <div class="col-md-3">
                                <label for="fromDate" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="fromDate" name="fromDate"
                                       value="@ViewData["FromDate"]">
                            </div>
                            <div class="col-md-3">
                                <label for="toDate" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="toDate" name="toDate"
                                       value="@ViewData["ToDate"]">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Orders Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Total Amount</th>
                                    <th>Items</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderRecordsId</td>
                                            <td>
                                                <div>
                                                    <strong>@order.CustomerName</strong><br>
                                                    <small class="text-muted">@order.CustomerEmail</small>
                                                </div>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>₱@order.TotalAmount.ToString("N2")</td>
                                            <td>@order.ItemCount items</td>
                                            <td>
                                                <span class="badge bg-success">@order.Status</span>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm"
                                                        onclick="showReturnModal(@order.OrderRecordsId, @order.OrderPackagesId, '@order.CustomerName')">
                                                    <i class="fas fa-undo"></i> Return
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>No completed orders found.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.HasPreviousPage || Model.HasNextPage)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.PageIndex - 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">
                                        Previous
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageIndex="@i"
                                           asp-route-searchString="@ViewData["CurrentFilter"]"
                                           asp-route-fromDate="@ViewData["FromDate"]"
                                           asp-route-toDate="@ViewData["ToDate"]">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.PageIndex + 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">
                                        Next
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Return Modal -->
<div class="modal fade" id="returnModal" tabindex="-1" aria-labelledby="returnModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="returnModalLabel">Process Return</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="returnForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="orderRecordsId" name="orderRecordsId">
                    <input type="hidden" id="orderPackagesId" name="orderPackagesId">

                    <div class="mb-3">
                        <label class="form-label">Customer:</label>
                        <p id="customerName" class="fw-bold"></p>
                    </div>

                    <div class="mb-3">
                        <label for="reason" class="form-label">Return Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="reason" name="reason" rows="3"
                                  placeholder="Please provide the reason for return..." maxlength="500"></textarea>
                        <div class="form-text">Maximum 500 characters</div>
                        <div class="invalid-feedback" id="reasonError"></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="restockItems" name="restockItems" checked>
                            <label class="form-check-label" for="restockItems">
                                Restock items (add back to inventory)
                            </label>
                        </div>
                        <div class="form-text">Uncheck if items are damaged and cannot be resold</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="processReturn()">
                    <i class="fas fa-undo"></i> Process Return
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showReturnModal(orderRecordsId, orderPackagesId, customerName) {
            document.getElementById('orderRecordsId').value = orderRecordsId;
            document.getElementById('orderPackagesId').value = orderPackagesId;
            document.getElementById('customerName').textContent = customerName;

            // Reset form
            const reasonField = document.getElementById('reason');
            reasonField.value = '';
            reasonField.classList.remove('is-invalid');
            document.getElementById('reasonError').textContent = '';
            document.getElementById('restockItems').checked = true;

            var modal = new bootstrap.Modal(document.getElementById('returnModal'));
            modal.show();
        }

        function validateForm() {
            const reasonField = document.getElementById('reason');
            const reasonError = document.getElementById('reasonError');
            let isValid = true;

            // Reset validation
            reasonField.classList.remove('is-invalid');
            reasonError.textContent = '';

            // Validate reason
            if (!reasonField.value || reasonField.value.trim() === '') {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason is required.';
                isValid = false;
            } else if (reasonField.value.length > 500) {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason cannot exceed 500 characters.';
                isValid = false;
            }

            return isValid;
        }

        async function processReturn() {
            if (!validateForm()) {
                return;
            }

            const form = document.getElementById('returnForm');
            const formData = new FormData(form);

            const returnData = {
                orderRecordsId: parseInt(formData.get('orderRecordsId')),
                orderPackagesId: parseInt(formData.get('orderPackagesId')),
                reason: formData.get('reason'),
                restockItems: formData.get('restockItems') === 'on'
            };

            try {
                const response = await fetch('@Url.Action("ProcessReturn", "Returns")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(returnData)
                });

                const result = await response.json();

                if (result.success) {
                    alert('Return processed successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('returnModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred while processing the return: ' + error.message);
            }
        }

        // Real-time character count for reason field
        document.getElementById('reason').addEventListener('input', function() {
            const maxLength = 500;
            const currentLength = this.value.length;
            const formText = this.nextElementSibling;

            if (currentLength > maxLength) {
                formText.textContent = `Exceeded maximum by ${currentLength - maxLength} characters`;
                formText.classList.add('text-danger');
            } else {
                formText.textContent = `${currentLength}/${maxLength} characters`;
                formText.classList.remove('text-danger');
            }
        });
    </script>
}
