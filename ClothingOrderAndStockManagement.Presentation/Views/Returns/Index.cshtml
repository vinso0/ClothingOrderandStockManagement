@using ClothingOrderAndStockManagement.Application.Dtos.Orders
@using ClothingOrderAndStockManagement.Application.Helpers
@model ReturnsIndexViewModel
@{
    ViewData["Title"] = "Returns Management";
    string GetStatusBadgeClass(string status) =>
        status switch
        {
            "Awaiting Payment" => "bg-danger",
            "Partially Paid" => "bg-warning",
            "Fully Paid" => "bg-info",
            "Completed" => "bg-success",
            "Returned" => "bg-secondary",
            "Cancelled" => "bg-dark",
            _ => "bg-secondary"
        };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Returns Management</h3>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="searchString" class="form-label">Search</label>
                                <input type="text" class="form-control" id="searchString" name="searchString"
                                       value="@ViewData["CurrentFilter"]" placeholder="Search by customer ID, name, or reason">
                            </div>
                            <div class="col-md-3">
                                <label for="fromDate" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="fromDate" name="fromDate"
                                       value="@ViewData["FromDate"]">
                            </div>
                            <div class="col-md-3">
                                <label for="toDate" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="toDate" name="toDate"
                                       value="@ViewData["ToDate"]">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Completed Orders (like Orders page summary) -->
                    <h5 class="mb-3">Completed Orders</h5>
                    <div class="table-responsive">
                        <table class="table table-hover customer-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date &amp; Time</th>
                                    <th>Status</th>
                                    <th class="customer-actions">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Completed != null && Model.Completed.Any())
                                {
                                    @foreach (var o in Model.Completed)
                                    {
                                        <tr>
                                            <td><span class="customer-id">#@o.OrderRecordsId</span></td>
                                            <td><span class="customer-name">@o.CustomerName</span></td>
                                            <td class="customer-details">
                                                @o.OrderDate.ToString("MMM dd, yyyy")
                                                <br />
                                                <small>@o.OrderDate.ToDateTime(TimeOnly.MinValue).ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(o.Status)">@o.Status</span>
                                            </td>
                                            <td class="customer-actions">
                                                <button class="btn btn-sm btn-danger"
                                                        onclick="showReturnModal(@o.OrderRecordsId, @o.OrderPackagesId, '@o.CustomerName')">
                                                    Return
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">No completed orders found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination for Completed list -->
                    @if (Model.Completed != null && (Model.Completed.HasPreviousPage || Model.Completed.HasNextPage))
                    {
                        <nav aria-label="Completed pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.Completed.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.Completed.PageIndex - 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">Previous</a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        Page @Model.Completed.PageIndex of @Model.Completed.TotalPages
                                    </span>
                                </li>
                                <li class="page-item @(Model.Completed.HasNextPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.Completed.PageIndex + 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }

                    <hr class="my-4" />

                    <!-- Return History -->
                    <h5 class="mb-3">Return History</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Return ID</th>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date &amp; Time</th>
                                    <th>Status</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.History != null && Model.History.Any())
                                {
                                    @foreach (var r in Model.History)
                                    {
                                        <tr>
                                            <td>#@r.ReturnLogsId</td>
                                            <td>#@r.OrderRecordsId</td>
                                            <td>
                                                <div>
                                                    <strong>@r.CustomerName</strong><br />
                                                    <small class="text-muted">@r.CustomerEmail</small>
                                                </div>
                                            </td>
                                            <td>
                                                @r.ReturnDate.ToString("MMM dd, yyyy")
                                                <br />
                                                <small>@r.ReturnDate.ToDateTime(TimeOnly.MinValue).ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(r.OrderStatus)">@r.OrderStatus</span>
                                            </td>
                                            <td>@r.Reason</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">No return history found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination for History list -->
                    @if (Model.History != null && (Model.History.HasPreviousPage || Model.History.HasNextPage))
                    {
                        <nav aria-label="History pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.History.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.History.PageIndex - 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">Previous</a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        Page @Model.History.PageIndex of @Model.History.TotalPages
                                    </span>
                                </li>
                                <li class="page-item @(Model.History.HasNextPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.History.PageIndex + 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-fromDate="@ViewData["FromDate"]"
                                       asp-route-toDate="@ViewData["ToDate"]">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Return Modal (unchanged) -->
<div class="modal fade" id="returnModal" tabindex="-1" aria-labelledby="returnModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="returnModalLabel">Process Return</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="returnForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="orderRecordsId" name="orderRecordsId">
                    <input type="hidden" id="orderPackagesId" name="orderPackagesId">

                    <div class="mb-3">
                        <label class="form-label">Customer:</label>
                        <p id="customerName" class="fw-bold"></p>
                    </div>

                    <div class="mb-3">
                        <label for="reason" class="form-label">Return Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="reason" name="reason" rows="3"
                                  placeholder="Please provide the reason for return..." maxlength="500"></textarea>
                        <div class="form-text">Maximum 500 characters</div>
                        <div class="invalid-feedback" id="reasonError"></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="restockItems" name="restockItems" checked>
                            <label class="form-check-label" for="restockItems">
                                Restock items (add back to inventory)
                            </label>
                        </div>
                        <div class="form-text">Uncheck if items are damaged and cannot be resold</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="processReturn()">
                    <i class="fas fa-undo"></i> Process Return
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showReturnModal(orderRecordsId, orderPackagesId, customerName) {
            document.getElementById('orderRecordsId').value = orderRecordsId;
            document.getElementById('orderPackagesId').value = orderPackagesId;
            document.getElementById('customerName').textContent = customerName;

            const reasonField = document.getElementById('reason');
            reasonField.value = '';
            reasonField.classList.remove('is-invalid');
            document.getElementById('reasonError').textContent = '';
            document.getElementById('restockItems').checked = true;

            var modal = new bootstrap.Modal(document.getElementById('returnModal'));
            modal.show();
        }

        function validateForm() {
            const reasonField = document.getElementById('reason');
            const reasonError = document.getElementById('reasonError');
            let isValid = true;

            reasonField.classList.remove('is-invalid');
            reasonError.textContent = '';

            if (!reasonField.value || reasonField.value.trim() === '') {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason is required.';
                isValid = false;
            } else if (reasonField.value.length > 500) {
                reasonField.classList.add('is-invalid');
                reasonError.textContent = 'Return reason cannot exceed 500 characters.';
                isValid = false;
            }

            return isValid;
        }

        async function processReturn() {
            if (!validateForm()) return;

            const form = document.getElementById('returnForm');
            const formData = new FormData(form);

            const returnData = {
                orderRecordsId: parseInt(formData.get('orderRecordsId')),
                orderPackagesId: parseInt(formData.get('orderPackagesId')),
                reason: formData.get('reason'),
                restockItems: formData.get('restockItems') === 'on'
            };

            try {
                const response = await fetch('@Url.Action("ProcessReturn", "Returns")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(returnData)
                });

                const result = await response.json();
                if (result.success) {
                    alert('Return processed successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('returnModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('An error occurred while processing the return: ' + error.message);
            }
        }
    </script>
}