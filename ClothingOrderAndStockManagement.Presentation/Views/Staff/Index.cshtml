@model ClothingOrderAndStockManagement.Application.Helpers.PaginatedList<ClothingOrderAndStockManagement.Application.Dtos.Orders.OrderRecordDto>
@{
    ViewData["Title"] = "Order Sorting - Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="customer-header">
    <h2>Order Sorting</h2>
</div>

<div class="reports-section">
    @if (Model != null && Model.Any())
    {
        <div class="alert alert-info mb-3">
            <i class="fas fa-info-circle me-2"></i>
            Showing <strong>@Model.Count()</strong> orders ready for sorting.
        </div>

        <div class="table-responsive">
            <table class="table table-hover customer-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date & Status</th>
                        <th>Packages</th>
                        <th>Total Amount</th>
                        <th>Amount Paid</th>
                        <th>Balance</th>
                        <th class="customer-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><span class="customer-id">#@order.OrderRecordsId</span></td>
                            <td><span class="customer-name">@order.CustomerName</span></td>
                            <td class="customer-details">
                                @order.OrderDatetime.ToString("MMM dd, yyyy")
                                <br />
                                <small>@order.OrderDatetime.ToString("hh:mm tt")</small>
                                <br />
                                <span class="badge @GetStatusBadgeClass(order.OrderStatus)">@order.OrderStatus</span>
                            </td>
                            <td class="customer-details">
                                @if (order.OrderPackages.Any())
                                {
                                    <ul class="mb-0 ps-3">
                                        @foreach (var pkg in order.OrderPackages)
                                        {
                                            <li>@pkg.PackageName × @pkg.Quantity</li>
                                        }
                                    </ul>
                                }
                            </td>
                            <td class="customer-details">₱@order.TotalAmount.ToString("N2")</td>
                            <td class="customer-details text-success">₱@order.TotalPaid.ToString("N2")</td>
                            <td class="customer-details @(order.RemainingBalance > 0 ? "text-danger" : "text-success")">
                                ₱@order.RemainingBalance.ToString("N2")
                            </td>
                            <td class="customer-actions">
                                <div class="btn-group" role="group">
                                    <!-- Complete Order Button -->
                                    <button class="btn btn-sm btn-outline-success staff-complete-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#completeOrderModal-@order.OrderRecordsId">
                                        <i class="fa-solid fa-check-to-slot"></i>
                                        Complete
                                    </button>

                                    <!-- View Details Button -->
                                    <button class="btn btn-sm btn-outline-primary staff-details-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#orderDetailsModal-@order.OrderRecordsId">
                                        <i class="fa-solid fa-circle-info"></i>
                                        Details
                                    </button>
                                </div>

                                <!-- Complete Order Confirmation Modal -->
                                <div class="modal fade" id="completeOrderModal-@order.OrderRecordsId" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Complete Order Processing</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-warning">
                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                    <strong>Confirm Order Completion</strong>
                                                </div>
                                                <p>Are you sure you want to mark <strong>Order #@order.OrderRecordsId</strong> for <strong>@order.CustomerName</strong> as completed?</p>
                                                <div class="order-summary mt-3">
                                                    <small class="text-muted">
                                                        <strong>Order Details:</strong><br>
                                                        Total: ₱@order.TotalAmount.ToString("N2")<br>
                                                        Paid: ₱@order.TotalPaid.ToString("N2")<br>
                                                        Status: <span class="badge @GetStatusBadgeClass(order.OrderStatus)">@order.OrderStatus</span>
                                                    </small>
                                                </div>
                                                <p class="mt-3"><em>Once marked as completed, this order will no longer appear in the sorting queue.</em></p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-controller="Staff" asp-action="CompleteOrder" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="orderId" value="@order.OrderRecordsId" />
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-check me-1"></i>
                                                        Complete Order
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Order Details Modal -->
                                <div class="modal fade" id="orderDetailsModal-@order.OrderRecordsId" tabindex="-1">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Order #@order.OrderRecordsId Details</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6>Customer Information</h6>
                                                        <p><strong>Name:</strong> @order.CustomerName</p>
                                                        <p><strong>Order Date:</strong> @order.OrderDatetime.ToString("MMM dd, yyyy hh:mm tt")</p>
                                                        <p><strong>Status:</strong> <span class="badge @GetStatusBadgeClass(order.OrderStatus)">@order.OrderStatus</span></p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6>Payment Information</h6>
                                                        <p><strong>Total Amount:</strong> ₱@order.TotalAmount.ToString("N2")</p>
                                                        <p><strong>Amount Paid:</strong> <span class="text-success">₱@order.TotalPaid.ToString("N2")</span></p>
                                                        <p><strong>Remaining Balance:</strong> <span class="@(order.RemainingBalance > 0 ? "text-danger" : "text-success")">₱@order.RemainingBalance.ToString("N2")</span></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <h6>Package Details</h6>
                                                @if (order.OrderPackages.Any())
                                                {
                                                    <div class="table-responsive">
                                                        <table class="table table-sm">
                                                            <thead>
                                                                <tr>
                                                                    <th>Package Name</th>
                                                                    <th>Quantity</th>
                                                                    <th>Unit Price</th>
                                                                    <th>Subtotal</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var pkg in order.OrderPackages)
                                                                {
                                                                    <tr>
                                                                        <td>@pkg.PackageName</td>
                                                                        <td>@pkg.Quantity</td>
                                                                        <td>₱@pkg.PriceAtPurchase.ToString("N2")</td>
                                                                        <td>₱@((pkg.Quantity * pkg.PriceAtPurchase).ToString("N2"))</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No packages found for this order.</p>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-customers-section">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                <line x1="3" y1="6" x2="21" y2="6"/>
                <path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            <h5>No orders ready for sorting</h5>
            <p>Orders with "Partially Paid" or "Fully Paid" status will appear here for processing.</p>
        </div>
    }

    <!-- Pagination -->
    <div class="pagination-section">
        <div>
            Page @Model!.PageIndex of @Model!.TotalPages
        </div>

        <div>
            @if (Model.HasPreviousPage)
            {
                <a asp-action="OrderSorting"
                   asp-route-pageIndex="@(Model.PageIndex - 1)"
                   class="btn btn-outline-secondary">Previous</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="OrderSorting"
                   asp-route-pageIndex="@(Model.PageIndex + 1)"
                   class="btn btn-outline-primary">Next</a>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Awaiting Payment" => "bg-danger",
            "Partially Paid" => "bg-warning",
            "Fully Paid" => "bg-info",
            "Completed" => "bg-success",
            "Returned" => "bg-secondary",
            "Cancelled" => "bg-dark",
            _ => "bg-secondary"
        };
    }
}

<style>
    .staff-complete-btn {
        border-radius: 4px;
        font-size: 12px;
        padding: 4px 12px;
        margin-right: 0.25rem;
        display: flex;
        align-items: center;
    }

    .staff-complete-btn:hover {
        background-color: #198754;
        color: white;
    }

    .staff-details-btn {
        border-radius: 4px;
        font-size: 12px;
        padding: 4px 12px;
        display: flex;
        align-items: center;
    }

    .staff-details-btn:hover {
        background-color: #0d6efd;
        color: white;
    }

    .order-summary {
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 4px;
        border-left: 4px solid #0d6efd;
    }

    .alert-warning {
        border-left: 4px solid #ffc107;
    }
</style>
